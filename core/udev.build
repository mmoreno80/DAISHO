build ()
{
    tar xf $repodir/systemd-188.tar.xz
    mv systemd-188 $srcdir
    cd $srcdir
    tar xf $repdir/udev-lfs-188-3.tar.bz2
    make -f udev-lfs-188/Makefile.lfs
    make DESTDIR=$pkgdir -f udev-lfs-188/Makefile.lfs install
}
